<?xml version="1.0" encoding="UTF-8"?>
 
<mvc-config>

	<!-- 配置你的控制器类有哪些 -->
	<controller-class>
		<controller name="goodsController" className="com.wangshidai.eshopFront.controller.GoodsController" />
		<controller name="userController" className="com.wangshidai.eshopFront.controller.UserController" />
		<controller name="addressController" className="com.wangshidai.eshopFront.controller.AddressController" />
	</controller-class>
	
	
	<!-- 你每一个控制器中有哪些路径 -->
	<controller-mappings>
<!--		商品有关-->
		<action name="goodsController" path="/product/type.action" />
		<action name="goodsController" path="/product/good.action" />
<!--		用户登录有关-->
		<action name="userController" path="/user/showLogin.action" />
		<action name="userController" path="/user/captcha.action" />
		<action name="userController" path="/user/check_captcha.action" />
		<action name="userController" path="/user/login.action" />
		<action name="userController" path="/user/logOut.action" />
		<action name="userController" path="/user/member.action" />
		<action name="userController" path="/user/register.action" />
		<action name="userController" path="/user/newRegister.action" />
		<action name="userController" path="/user/pwdQuestion.action" />
		<action name="userController" path="/user/verify_activated_account.action" />

<!--		收货地址-->
		<action name="addressController" path="/address/province.action" />
		<action name="addressController" path="/address/city.action" />
		<action name="addressController" path="/address/area.action" />

	</controller-mappings>
		
		
</mvc-config>