<?xml version="1.0" encoding="UTF-8"?>
 
<mvc-config>

	<!-- 配置你的控制器类有哪些 -->
	<controller-class>
		<controller name="goodsController" className="com.wangshidai.eshop_front.controller.GoodsController" />
		<controller name="userController" className="com.wangshidai.eshop_front.controller.UserController" />
	</controller-class>
	
	
	<!-- 你每一个控制器中有哪些路径 -->
	<controller-mappings>
<!--		商品有关-->
		<action name="goodsController" path="/product/type.action" />
		<action name="goodsController" path="/product/good.action" />
<!--		用户登录有关-->
		<action name="userController" path="/user/showLogin.action" />
		<action name="userController" path="/user/captcha.action" />
		<action name="userController" path="/user/check_captcha.action" />
		<action name="userController" path="/user/login.action" />
	</controller-mappings>
		
		
</mvc-config>